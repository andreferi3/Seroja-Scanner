<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cde.android.qrscanner">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/tikomdik"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tikomdik"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.LaunchScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Activity.AboutMakerActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Activity.AboutSerojaActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>